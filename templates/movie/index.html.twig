{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block content %}
    <h1>Movie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Picture</th>
                <th>Casting</th>
                <th>Realisateur</th>
                <th>Synopsis</th>
                <th>Trailer</th>
                <th>Link</th>
                <th>Seen</th>
                <th>Liked</th>
                <th>Month</th>
                <th>Poster</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.picture }}</td>
                <td>{{ movie.casting }}</td>
                <td>{{ movie.realisateur }}</td>
                <td>{{ movie.synopsis }}</td>
                <td>{{ movie.trailer }}</td>
                <td>{{ movie.link }}</td>
                <td>{{ movie.seen ? 'Yes' : 'No' }}</td>
                <td>{{ movie.liked ? 'Yes' : 'No' }}</td>
                <td>{{ movie.month }}</td>
                <td>{{ movie.poster }}</td>
                <td>{{ movie.slug }}</td>
                <td>
                    <a href="{{ path('app_movie_show', {'id': movie.id}) }}">show</a>
                    <a href="{{ path('app_movie_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_movie_new') }}">Create new</a>
{% endblock %}
