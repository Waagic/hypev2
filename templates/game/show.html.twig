{% extends 'base.html.twig' %}

{% block title %}{{ game.title }} - HYPE.{% endblock %}

{% block content %}
    <div class="mx-5 w-full flex flex-col items-center text-textColor">
        <div class="flex items-center">
            <h1>{{ game.title }}</h1>
            <div class="ml-3">
                <a class="js-done" data-no-swup href="{{ path('app_game_done', {slug: game.slug}) }}">{% include('icons/done.html.twig') with {'done': game.done} %}</a>
            </div>
            <div class="ml-3">
                <a class="js-liked" data-no-swup href="{{ path('app_game_liked', {slug: game.slug}) }}">{% include('icons/like.html.twig') with {'liked': game.liked} %}</a>
            </div>
        </div>
        <div class="w-1/2">
            <fieldset class="border-2 border-opacity-50 border-orange rounded my-10 p-5">
                <legend class="ml-5 px-2"><h2>INFORMATIONS.</h2></legend>
                <div>
                    <div>
                        Prix : {{ game.price }}â‚¬
                    </div>
                    <div class="mt-3">
                        Genre : {{ game.type }}
                    </div>
                    <div class="mt-3">
                        <a class="underline underline-offset-4 hover:underline-offset-2 transition-all decoration-orange" href="{{ game.link }}">Voir le jeu</a>
                    </div>
                </div>
            </fieldset>
            <fieldset class="border-2 border-opacity-50 border-orange rounded my-10 p-5">
                <legend class="ml-5 px-2"><h2>DESCRIPTION.</h2></legend>
                <div>
                    {{ game.description }}
                </div>
            </fieldset>
            <fieldset class="border-2 border-opacity-50 border-orange rounded my-10 p-5">
                <legend class="ml-5 px-2"><h2>VIDEO.</h2></legend>
                <div>
                    <iframe width="100%" height="600px" src="https://www.youtube.com/embed/{{ game.video }}"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                </div>
            </fieldset>
        </div>
    </div>
{% endblock %}
